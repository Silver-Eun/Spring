<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.songjava.mvc.repository.BoardRepository">
    <select id="getList" parameterType="com.spring.songjava.mvc.domain.Board"
            resultType="com.spring.songjava.mvc.domain.Board">
        SELECT B.BOARD_SEQ,
               B.TITLE,
               B.CONTENTS,
               B.REG_DATE
        FROM BOARD B
        ORDER BY B.REG_DATE DESC
    </select>

    <select id="get" parameterType="int"
            resultType="com.spring.songjava.mvc.domain.Board">
        SELECT B.BOARD_SEQ,
               B.TITLE,
               B.CONTENTS,
               B.REG_DATE
        FROM BOARD B
        WHERE B.BOARD_SEQ = #{boardSeq}
    </select>

    <insert id="save" parameterType="com.spring.songjava.mvc.parameter.BoardParameter" useGeneratedKeys="true"
            keyProperty="boardSeq">
        INSERT INTO BOARD
        (TITLE,
         CONTENTS,
         REG_DATE)
        VALUES (#{TITLE},
                #{CONTENTS},
                NOW())
    </insert>

    <update id="update" parameterType="com.spring.songjava.mvc.domain.Board">
        UPDATE BOARD
        SET TITLE    = #{TITLE},
            CONTENTS = #{CONTENTS}
        WHERE BOARD_SEQ = #{boardSeq}
    </update>

    <delete id="delete" parameterType="int">
        DELETE
        FROM BOARD
        WHERE BOARD_SEQ = #{boardSeq}
    </delete>
</mapper>